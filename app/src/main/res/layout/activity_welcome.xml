<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome_background_org"
    android:id="@+id/activity_welcome_relativeLayout">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:layout_marginStart="50dp"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:id="@+id/activity_welcome_linearLayout">

    <ImageView
        android:id="@+id/activity_welcome_logo"
        android:layout_width="250dp"
        android:layout_height="140dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/seeMenuButton"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="18dp"
            android:height="45dp"
            android:background="@drawable/bg_button"
            android:text="Vores Menu"
            android:textAllCaps="false"
            android:drawableStart="@drawable/sushinsticks"
            android:drawableTint="@color/colorPrimaryText"

            android:paddingLeft="16dp"
            android:paddingRight="30dp"
            android:textColor="#ffff"
            android:textSize="18sp" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/signUpButton"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:layout_marginTop="18dp"
        android:layout_gravity="center_horizontal"
        android:drawableStart="@drawable/account_outline"
        android:background="@drawable/bg_button"
        android:paddingLeft="16dp"
        android:paddingRight="30dp"
        android:backgroundTint="#8d8d8d"
        android:text="Opret Profil"
        android:textColor="#ffff"/>

    <TextView
        android:id="@+id/LoginButton"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:textSize="15sp"
        android:layout_marginTop="18dp"
        android:layout_gravity="center_horizontal"
        android:text="Login"
        android:textColor="#b2ffffff"/>

    </LinearLayout>


</RelativeLayout>