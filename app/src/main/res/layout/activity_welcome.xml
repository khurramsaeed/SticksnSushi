<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/welcome_background_org"
    android:orientation="vertical">


    <ImageView
        android:layout_width="250dp"
        android:layout_height="140dp"
        android:layout_marginTop="80dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo"/>



    <android.support.v7.widget.AppCompatButton
        android:id="@+id/seeMenuButton"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:height="45dp"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:layout_marginTop="18dp"
        android:background="#FFD10C13"
        android:text="Vores Menu"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffff"
        android:onClick="startOverviewActivity"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/signUpButton"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:layout_marginTop="18dp"
        android:layout_gravity="center_horizontal"
        android:background="#8d8d8d"
        android:text="Opret Profil"
        android:textColor="#ffff"
        android:onClick="startSignUpActivity"/>



    <TextView
        android:id="@+id/LoginButton"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:textSize="15sp"
        android:layout_marginTop="18dp"
        android:layout_gravity="center_horizontal"
        android:text="Login"
        android:textColor="#b2ffffff"
        android:onClick="startLoginActivity"/>


    <android.support.v7.widget.AppCompatButton
        android:id="@+id/seeCheckoutButton"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="50dp"
        android:height="45dp"
        android:background="#21ffffff"
        android:onClick="startCheckoutActivity"
        android:padding="12dp"
        android:text="Checkout"
        android:textColor="#ffff" />


</LinearLayout>