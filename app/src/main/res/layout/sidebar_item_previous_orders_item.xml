<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@color/colorSecondary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?attr/selectableItemBackground"
    android:clickable="true">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/previous_orders_orderId"
                android:text="Bestillingsnr. 2235522"
                android:textSize="16sp"
                android:textColor="@color/colorPrimaryText"/>

            <TextView
                android:id="@+id/previous_orders_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="2017-08-03"
                android:textSize="14sp"
                android:textColor="@color/price_color"/>
            <TextView
                android:paddingStart="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/price_color"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="134,87 kr. (2 emner)"
                android:gravity="left"
                android:id="@+id/previous_orders_price" />
        </LinearLayout>

        <ImageView
            android:layout_margin="16dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/alacarte_01"
            android:layout_gravity="center"/>

    </LinearLayout>

</FrameLayout>